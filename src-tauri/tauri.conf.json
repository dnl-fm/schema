{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Schema",
  "version": "0.1.1",
  "identifier": "com.schema.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Schema",
        "width": 1200,
        "height": 800,
        "center": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DNL",
    "copyright": "Â© 2025 DNL",
    "shortDescription": "Work with SQLite and LibSQL databases",
    "longDescription": "Effortlessly explore, query, and manage your SQLite and LibSQL databases with Schema. This app provides a user-friendly interface for viewing database schemas, executing SQL queries, and managing your data."
  }
}